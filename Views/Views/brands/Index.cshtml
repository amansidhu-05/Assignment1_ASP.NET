@model IEnumerable<Assignment1.Models.brands>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.brandName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.glassType)
            </th>
                @if (User.Identity.IsAuthenticated)
                {
                <th>
                    Manage
                </th>
            }
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.brandName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.glassType)
            </td>
            @if (User.Identity.IsAuthenticated)
            {
                <td>
                    <a asp-action="Edit" asp-route-id="@item.brandId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.brandId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.brandId">Delete</a>
                </td>
            }
        </tr>
}
    </tbody>
</table>
